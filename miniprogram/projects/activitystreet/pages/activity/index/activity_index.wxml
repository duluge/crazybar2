<view wx:if="{{!isLoad}}" class="margin-top load loading text-l load-project"></view>
<block wx:else>
	<cmpt-comm-list type="activity-list" _params="{{_params}}" search="{{search||''}}" _menus="{{sortMenus}}" _items="{{sortItems}}" sortMenusDefaultIndex="0" route="activity/list" topBottom="120" isTotalMenu="{{true}}" placeholder="搜索" bind:list="bindCommListCmpt" style="position: relative; left: 0rpx; top: 4rpx">
		<view class="main">
			<view class="list">
				<view class="item card-project shadow-project" wx:for="{{dataList.list}}" wx:key="key" bindtap="url" data-url="../detail/activity_detail?id={{item._id}}" style="width: 712rpx; height: 402rpx; display: flex; box-sizing: border-box; left: 2rpx; top: 0rpx; position: relative">
					<image style="width: 74rpx; height: 72rpx; display: block; box-sizing: border-box; left: 0rpx; top: 0rpx" class="left loading shadow-project" mode="aspectFill" lazy-load="{{true}}" src="{{item.ACTIVITY_OBJ.cover[0]}}" />
					<view class="right">
						<view class="top">
							<view class="title content-cut-two">{{item.ACTIVITY_TITLE}}</view>
							<view class="desc content-cut-one">{{item.time}}开始</view>
						</view>
						<view class="line">
							<view class="users">
								<view class="pic-group">
									<image wx:for="{{item.ACTIVITY_USER_LIST}}" wx:for-index="idx" wx:key="key"  wx:if="{{idx<3}}" wx:for-item="itm" class="pic round loading" mode="aspectFill" lazy-load="{{true}}" src="{{itm.USER_PIC}}" /> 
								</view>
								<text wx:if="{{item.ACTIVITY_JOIN_CNT}}" class="num">+{{item.ACTIVITY_JOIN_CNT}}人报名</text>
								<text wx:else class="num">{{item.ACTIVITY_JOIN_CNT}}人报名</text>
							</view>
							<view class="join {{item.statusDesc=='报名中'?'comm':''}}"> 
								<text wx:if="{{item.statusDesc=='报名中'}}">报名中</text>
								<text wx:else>{{item.statusDesc}}</text>
							</view>
						</view>
					</view>
				</view>
			</view>

		</view> 
	 

		<!--load begin-->
		<import src="../../../../../tpls/public/list_load_tpl.wxml" />
		<template is="listLoadTpl" data="{{skin:'load-project',dataList}}" />
		<!--load end-->

	</cmpt-comm-list>
<view class="item card-project shadow-project" wx:for="{{dataList.list}}" wx:key="key" bindtap="url" data-url="../detail/activity_detail?id={{item._id}}" style="width: 712rpx; height: 414rpx; display: flex; box-sizing: border-box; left: 2rpx; top: 0rpx; position: relative">
					<image style="width: 74rpx; height: 72rpx; display: block; box-sizing: border-box; left: 0rpx; top: 0rpx" class="left loading shadow-project" mode="aspectFill" lazy-load="{{true}}" src="{{item.ACTIVITY_OBJ.cover[0]}}" />
					<view class="right">
						<view class="top">
							<view class="title content-cut-two">{{item.ACTIVITY_TITLE}}</view>
							<view class="desc content-cut-one">{{item.time}}开始</view>
						</view>
						<view class="line">
							<view class="users">
								<view class="pic-group">
									<image wx:for="{{item.ACTIVITY_USER_LIST}}" wx:for-index="idx" wx:key="key"  wx:if="{{idx<3}}" wx:for-item="itm" class="pic round loading" mode="aspectFill" lazy-load="{{true}}" src="{{itm.USER_PIC}}" /> 
								</view>
								<text wx:if="{{item.ACTIVITY_JOIN_CNT}}" class="num">+{{item.ACTIVITY_JOIN_CNT}}人报名</text>
								<text wx:else class="num">{{item.ACTIVITY_JOIN_CNT}}人报名</text>
							</view>
							<view class="join {{item.statusDesc=='报名中'?'comm':''}}"> 
								<text wx:if="{{item.statusDesc=='报名中'}}">报名中</text>
								<text wx:else>{{item.statusDesc}}</text>
							</view>
						</view>
					</view>
				</view>



	<block wx:if="{{skin.IS_SUB}}">
		<import src="../../tpls/menu_tpl.wxml" />
		<template is="menuTpl" data="{{skin,curMenu:'activity_index',returnHome}}" />
	</block>
</block>